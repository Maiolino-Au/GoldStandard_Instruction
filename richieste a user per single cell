# che cosa si vuole fare


cat("Current directory:", getwd())
i <- readline(prompt="Change directory? [y/n] ")
if (i=="y") {
  work_dir <- readline(prompt="Enter your working directory: ")
  setwd(work_dir)
  cat("Current directory:", getwd())
}
